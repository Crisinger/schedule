-# app/views/sessions/new.html.haml

%h1 Create New Session

= form_tag sessions_path, :method => 'post' do

  = label :session, :email, 'Email'
  = text_field :session, 'email'

  = label :session, :password, 'Password'
  = password_field :session, 'password'

  = submit_tag 'Log in'
  
= link_to 'Add new user', new_user_path